{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Storage account name"
            }
        },
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS"
            ],
            "metadata": {
                "description": "Storage account type"
            }
        },
        "sshKeyFileShareName": {
            "type": "string",
            "metadata": {
                "description": "Name of the config file share to be created"
            }
        },
        "uploadFileShareName": {
            "type": "string",
            "metadata": {
                "description": "Name of the upload file share to be created"
            }
        }
    },
    "variables": {
        "cliContainerName": "create-share",
        "cliContainerGroupName": "create-share-group",
        "cliContainerImage": "microsoft/azure-cli:latest"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('storageAccountName')]",
            "apiVersion": "2018-02-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('storageAccountType')]"
            },
            "kind": "Storage",
            "properties": {}
        },
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "name": "[variables('cliContainerGroupName')]",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[parameters('storageAccountName')]"
            ],
            "properties": {
                "containers": [
                    {
                        "name": "[variables('cliContainerName')]",
                        "properties": {
                            "image": "[variables('cliContainerImage')]",
                            "command": [
                                "sh",
                                "-c",
                                "[concat('az storage share create --name ', parameters('sshKeyFileShareName'), '; az storage share create --name ', parameters('uploadFileShareName'))]"
                            ],
                            "environmentVariables": [
                                {
                                    "name": "AZURE_STORAGE_KEY",
                                    "value": "[listKeys(parameters('storageAccountName'),'2018-02-01').keys[0].value]"
                                },
                                {
                                    "name": "AZURE_STORAGE_ACCOUNT",
                                    "value": "[parameters('storageAccountName')]"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": 1,
                                    "memoryInGB": 1
                                }
                            }
                        }
                    }
                ],
                "restartPolicy": "OnFailure",
                "osType": "Linux"
            }
        }
    ],
    "outputs": {
        "storageKey": {
            "type": "string",
            "value": "[listKeys(parameters('storageAccountName'),'2018-02-01').keys[0].value]"
        }
    }
}